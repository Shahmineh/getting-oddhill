service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{post} {
    	allow read;
      allow write: if request.auth.uid != null;
    }
    match /users/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /topics/{document=**} {
    	allow read;
      allow write: if request.auth.uid != null;
    }
    match /comments/{document=**} {
    	allow read;
      allow write: if request.auth.uid != null;
    }
  }
}
